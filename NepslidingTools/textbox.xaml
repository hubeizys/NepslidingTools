<UserControl x:Class="NepslidingTools.textbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NepslidingTools"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    <Grid>
        <Border BorderBrush="Blue" Margin="0,0,0,0" BorderThickness="1" CornerRadius="10">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Margin="0,0,0,0"  Height="20" TextWrapping="Wrap" FontSize="15px" Text="TextBlock" VerticalAlignment="Top"/>
        </Border>
    </Grid>
</UserControl>
